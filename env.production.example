# Django News Application - Production Environment Configuration
# Copy this file to .env.production for production deployment

# =============================================================================
# DJANGO SETTINGS
# =============================================================================

# Secret key for Django (REQUIRED - generate a new one for production)
SECRET_KEY=your-super-secret-key-change-this-in-production

# Debug mode (set to False in production)
DEBUG=False

# Allowed hosts (comma-separated list of domains)
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com,www.yourdomain.com

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# Database configuration for production (PostgreSQL recommended)
DB_NAME=newsapp_prod
DB_USER=newsapp_user
DB_PASSWORD=secure_database_password_change_me
DB_HOST=db
DB_PORT=5432

# =============================================================================
# REDIS SETTINGS
# =============================================================================

# Redis password for caching and sessions
REDIS_PASSWORD=secure_redis_password_change_me

# =============================================================================
# EMAIL SETTINGS
# =============================================================================

# Email backend configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_gmail_app_password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# TWITTER API SETTINGS (Optional)
# =============================================================================

# Twitter API credentials (get from https://developer.twitter.com)
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret
TWITTER_REDIRECT_URI=https://yourdomain.com/accounts/twitter/callback/

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# SSL/HTTPS settings (enable for production with SSL)
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# ADDITIONAL SETTINGS
# =============================================================================

# Time zone
TIME_ZONE=UTC

# Language code
LANGUAGE_CODE=en-us

# Media and static files URL (if using CDN)
# MEDIA_URL=https://cdn.yourdomain.com/media/
# STATIC_URL=https://cdn.yourdomain.com/static/
